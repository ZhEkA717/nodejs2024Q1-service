generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid()) 
  login     String
  password  String
  version   Int    @default(1)
  createdAt BigInt
  updatedAt BigInt
  token Token[]
  @@map("users")
}

model Token {
  token String @unique
  exp DateTime
  user User @relation(fields: [userId], references: [id])
  userId String
  login String
  userAgent String @map("user_agent")
  @@map("tokens")
}

model Album {
  id       String  @id @default(uuid())
  name     String
  year     Int
  artist   Artist? @relation(fields: [artistId], references: [id])
  artistId String?
  tracks   Track[]
  @@map("albums")
}

model Artist {
  id     String  @id @default(uuid())
  name   String
  grammy Boolean
  albums Album[]
  tracks Track[]
  @@map("artists")
}

model Track {
  id       String  @id @default(uuid())
  name     String
  artist   Artist? @relation(fields: [artistId], references: [id])
  artistId String?
  album    Album?  @relation(fields: [albumId], references: [id])
  albumId  String?
  duration Int
  @@map("tracks")
}

model Favorites {
  id      Int      @id @default(1)
  artists String[] @default([])
  albums  String[] @default([])
  tracks  String[] @default([])
  @@map("favorite")
}

